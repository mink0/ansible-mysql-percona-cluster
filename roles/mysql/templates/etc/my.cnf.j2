# Percona Mysql Server configuration
# For explanations see:
#   http://dev.mysql.com/doc/mysql/en/server-system-variables.html

[mysqld]
datadir = /var/lib/mysql
socket = /var/lib/mysql/mysql.sock
port = {{ mysql_port }}
bind-address = {{ mysql_bind_address }}

{% if mysql_repl_enable %}
# Cluster replication

## GTID
server-id = {{ mysql_repl_server_id }}
gtid-mode = on
enforce-gtid-consistency = true
log-slave-updates = true

## Binlog
log_bin = mysql-bin
expire_logs_days = {{ mysql_repl_expire_logs_days }}
binlog_format = ROW
binlog-checksum = CRC32

## Relaylog (slaves)
relay-log = relay-bin
relay-log-index = relay-bin.index

# enable orchestrator access to replication credentials
# https://github.com/github/orchestrator/issues/323
master_info_repository = TABLE

{% if 'mysql-slave' in group_names and 'mysql-master' not in group_names %}
## Read-only slave
read_only
{% endif %}
{% endif %}

# Connection limit
max_connections = {{ mysql_max_connections }}

skip-external-locking
log_bin_trust_function_creators = 1
symbolic-links = 0
transaction-isolation = {{ mysql_transaction_isolation }}
sql_mode = NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES

# Memory settings
key_buffer_size = {{ mysql_key_buffer_size }}
max_allowed_packet = {{ mysql_max_allowed_packet }}
table_open_cache = {{ mysql_table_open_cache }}
sort_buffer_size = {{ mysql_sort_buffer_size }}
read_buffer_size = {{ mysql_read_buffer_size }}
read_rnd_buffer_size = {{ mysql_read_rnd_buffer_size }}
query_cache_size = {{ mysql_query_cache_size }}
thread_cache_size = {{ mysql_thread_cache_size }}
thread_concurrency = {{ mysql_thread_concurrency }}
join_buffer_size = {{ mysql_join_buffer_size }}

# InnoDB settings
innodb_data_home_dir = /var/lib/mysql/
innodb_buffer_pool_size = {{ mysql_innodb_buffer_pool_size }}
innodb_additional_mem_pool_size = {{ mysql_innodb_additional_mem_pool_size }}
innodb_log_file_size = {{ mysql_innodb_log_file_size }}
innodb_log_buffer_size = {{ mysql_innodb_log_buffer_size }}
innodb_flush_log_at_trx_commit = {{ mysql_innodb_flush_log_at_trx_commit }}

# Database defaults
character-set-server = {{ mysql_character_set_server }}
collation-server = {{ mysql_collation_server }}
default-storage-engine = InnoDB

# Logging
log_error = /var/log/mysql/mysql_error.log

general_log = 1
general_log_file = /var/log/mysql/mysql_general.log

slow_query_log = 0
slow_query_log_file = /var/log/mysql/mysql_slow.log

[client]
port = 3306
socket = /var/lib/mysql/mysql.sock

[mysqldump]
quick
max_allowed_packet = {{ mysql_mysqldump_max_allowed_packet }}

[mysqld_safe]
pid-file = /var/run/mysqld/mysqld.pid
